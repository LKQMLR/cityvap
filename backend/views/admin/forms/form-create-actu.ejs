<%- include('../partials/admin-header') %>

<%- include('../partials/admin-menu') %>

<h2>Ajouter une nouvelle actualité</h2>

    <form action="/admin/actualites" method="POST">
      <select name="place" id="place">
        <option value="all">Toutes les boutiques</option>
        <option value="clisson">Clisson</option>
        <option value="vallet">Vallet</option>
        <option value="aigrefeuille">Aigrefeuille sur maine</option>
      </select>

      <label for="title">Titre de l'actu</label>
      <input type="text" name="title" id="title" />

      <label for="content">contenu de l'actualité</label>
      <textarea name="content" id="content" ></textarea>

      <button type="submit">Ajouter la news</button>

      <% if (success) { %>
      <p style="color: green"><%= success %></p>
      <% } %> 
      <% if (error) { %>
      <p style="color: red"><%= error %></p>
      <% } %>
    </form>
<%- include('../partials/admin-footer') %>

